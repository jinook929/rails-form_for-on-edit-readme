<h1>New Post</h1>

<%= form_for(@post) do |f| %>
  <p>
    <%= f.label "Post title:", for: "post_title" %>
    <br>
    <%= f.text_field :title, name: "title" %>
  </p>
  <p>
    <%= f.label "Post Description", for: "post_description" %>
    <br>
    <%= f.text_area :description, name: "description" %>
  </p>

  <%= f.submit "Submit Post" %>
<% end %>

<%= link_to "Back to List", posts_path %>
  