<h3>Post Form</h3>

<%= form_for(@post) do |f| %>
  <p>
    <%= f.label "Post title:", for: "post_title" %>
    <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Post Description", for: "post_description" %>
    <br>
    <%= f.text_area :description %>
  </p>

  <%= submit_tag "Update Post" %>
<% end %>